* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-family: Arial, sans-serif;
  background: #111; /* Latar belakang hitam */
}

.container {
  width: 100%;
  max-width: 400px;
  text-align: center;
  position: relative;
  background-color: rgba(255, 255, 255, 0.1); /* Transparan hitam */
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
  padding-bottom: 20px;
  border: 1px solid #333;
}

header {
  background-color: rgba(255, 255, 255, 0.05);
  padding: 20px;
  border-bottom: 1px solid #333;
}

header h1 {
  font-size: 28px;
  font-weight: bold;
  color: #fff;
}

.subtitle {
  font-size: 14px;
  color: #bbb;
  margin-top: 10px;
}

.tagline {
  display: inline-block;
  margin-top: 8px;
  padding: 5px 15px;
  background-color: #333;
  color: #fff;
  font-weight: bold;
  font-size: 12px;
  text-transform: uppercase;
  border-radius: 3px;
}

.background-image {
  width: 100%;
  height: 200px;
  background-image: url('https://drive.google.com/uc?export=view&id=1VDS8VRkneXAHpiEKgEuPD4cIpgehfjPm'); /* Ganti URL gambar sesuai dengan ID gambar Google Drive */
  background-size: cover;
  background-position: center;
  margin-top: 10px;
  opacity: 0.7; /* Transparansi */
}

.links {
  margin: 20px 0;
}

.button {
  display: block;
  margin: 10px auto;
  padding: 12px;
  width: 90%;
  text-align: center;
  background-color: #333;
  color: #fff;
  font-weight: bold;
  text-decoration: none;
  border-radius: 5px;
  transition: background 0.3s ease;
  border: 1px solid #555;
}

.button:hover {
  background-color: #555;
}

footer {
  padding: 10px;
  font-size: 12px;
  color: #666;
}
